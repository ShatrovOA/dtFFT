@PACKAGE_INIT@

set(DTFFT_WITH_CUDA @DTFFT_WITH_CUDA@)
set(DTFFT_WITH_MOCK_ENABLED @DTFFT_WITH_MOCK_ENABLED@)
set(DTFFT_WITH_C_CXX_API @DTFFT_BUILD_C_CXX_API@)
set(DTFFT_WITH_MPI_MODULE @DTFFT_USE_MPI@)
set(DTFFT_WITH_NCCL @DTFFT_WITH_NCCL@)
set(DTFFT_WITH_NVSHMEM @DTFFT_WITH_NVSHMEM@)

include(CMakeFindDependencyMacro)

find_dependency(MPI @MPI_Fortran_VERSION@ EXACT REQUIRED)
if ( DTFFT_WITH_CUDA AND NOT DTFFT_WITH_MOCK_ENABLED)
  find_dependency(CUDAToolkit @CUDAToolkit_VERSION_MAJOR@ REQUIRED)
  if ( DTFFT_WITH_NVSHMEM )
    set(NVHPC_CUDA_VERSION @NVHPC_CUDA_VERSION@)
    set(NVHPC_CMAKE_PATH @NVHPC_CMAKE_PATH@)
    list(APPEND CMAKE_PREFIX_PATH "${NVHPC_CMAKE_PATH}")
    find_dependency(NVHPC REQUIRED)
  endif()
endif()

include("${CMAKE_CURRENT_LIST_DIR}/dtfftTargets.cmake")